@model IEnumerable<PoliziaMunicipaleApp.Models.Anagrafica>

@{
    ViewData["Title"] = "Anagrafica";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Anagrafica Trasgressori</h2>

    <div class="d-flex justify-content-between mb-3">
        <h3 class="text-muted">Elenco dei Trasgressori</h3>
        <a href="/Anagrafica/Create" class="btn btn-primary">Aggiungi Nuovo Trasgressore</a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
                <th>Codice Fiscale</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Cognome</td>
                    <td>@item.Nome</td>
                    <td>@item.Indirizzo</td>
                    <td>@item.Citta</td>
                    <td>@item.CAP</td>
                    <td>@item.Cod_Fisc</td>
                    <td>
                        <a href="/Anagrafica/Edit/@item.idAnagrafica" class="btn btn-sm btn-warning">Modifica</a>
                        <a href="/Anagrafica/Delete/@item.idAnagrafica" class="btn btn-sm btn-danger">Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>